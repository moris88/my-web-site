{
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-console": "warn",
    // prettier
    "prettier/prettier": [
      "error"
    ],
    // tailwind
    "tailwindcss/no-arbitrary-value": "warn",
    "tailwindcss/enforces-shorthand": "off",
    "tailwindcss/no-contradicting-classname": "error"
  },
  "plugins": [
    "prettier",
    "tailwindcss"
  ]
}